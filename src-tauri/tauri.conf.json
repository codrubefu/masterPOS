{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "MasterPOS",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.masterpos.app",
      "targets": [
        "msi"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "MasterPOS",
        "width": 1280,
        "height": 720,
        "resizable": true
      }
    ]
  }
}
